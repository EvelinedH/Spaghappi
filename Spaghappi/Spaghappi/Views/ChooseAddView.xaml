<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Spaghappi.Views.ChooseAddView"
             Title="{Binding PageTitle}">
    <ContentPage.Content>
        <Grid>
            <Image x:Name="image" Aspect="AspectFill"/>
            <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Spacing="60">
                <Button Text="Barcode Scannen" Command="{Binding BarCommand}"/>
                <Button Text="Manueel Toevoegen" Command="{Binding ManuelCommand}"/>
                <Button Text="Terug" Command="{Binding EndCommand}"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>